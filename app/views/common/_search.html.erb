<%= form_tag "#{request.base_url}#{request.path}", method: 'get' do%>
	<%= text_field_tag 'search', params[:search] %>
	<%= label_tag 'Consoles', 'Consoles:'%>
	<% if(category) %>
		<%= select_tag 'console', options_for_select(@consoles.collect {|console| [console.name,console.id]}), :include_blank => true %>
		<%= label_tag 'Genres', 'Genres:'%>
		<%= select_tag 'genre', options_for_select(@genres.collect {|genre| [genre.name,genre.id]}), :include_blank => true %>
	<% end %>
	<%= submit_tag "search", name: nil %>
<%end%>