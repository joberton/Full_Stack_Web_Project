<%= render partial: "common/search" %>
<h1>Nerds eat them</h1>
<%= paginate @games %>
<% @games.each do |game| %>
	<ul id="products">
		<li><%= link_to game.name, game %></li>
		<li><%= image_tag game.image, size: "200" %></li>
		<li><%= game.price %></li>
		<li><%= game.description %></li>
		<li><%= game.date_released %></li>
		<%= link_to "remove?", game_url(game), method: :delete, data: {confirm: "are you sure?"} %>
		<%= link_to "edit?", edit_game_url(game) %>
	</ul>
<%end%>
<%= link_to "new" ,new_game_url %>
